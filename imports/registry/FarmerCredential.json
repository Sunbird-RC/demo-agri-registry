{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "properties": {
    "FarmerCredential": {
      "$ref": "#/definitions/FarmerCredential"
    }
  },
  "required": [
    "FarmerCredential"
  ],
  "title": "Farmer Credential",
  "definitions": {
    "FarmerCredential": {
      "$id": "#/properties/FarmerCredential",
      "type": "object",
      "title": "The FarmerCredential Schema",
      "required": [
        "farmerId",
        "addressLine1",
        "village",
        "district",
        "pincode"
      ],
      "properties": {
        "farmerId": {
          "type": "string",
          "title": "The unique identifier of a farmer"
        },
        "firstName": {
          "type": "string",
          "title": "The first name of a farmer"
        },
        "lastName": {
          "type": "string",
          "title": "The last name of a farmer"
        },
        "addressLine1": {
          "type": "string",
          "title": "Address of the Farmer"
        },
        "addressLine2": {
          "type": "string",
          "title": "Address of the Farmer"
        },
        "village": {
          "type": "string",
          "title": "Village of the farmer"
        },
        "district": {
          "type": "string",
          "title": "District of the farmer"
        },
        "pincode": {
          "type": "string",
          "title": "Pincode of the farmer"
        }
      }
    }
  },
  "_osConfig": {
    "enableSearch": "true",
    "enableLogin": "false",
    "indexFields": ["farmerId"],
    "uniqueIndexFields": ["farmerId"],
    "systemFields": [
      "osCreatedAt",
      "osUpdatedAt",
      "osCreatedBy",
      "osUpdatedBy"
    ],
    "credentialTemplate": {
      "@context": [
        "https://www.w3.org/2018/credentials/v1",
        "https://raw.githubusercontent.com/Sunbird-RC/demo-donor-registry/main/contexts/vc-context.json"
      ],
      "type": [
        "VerifiableCredential",
        "FarmerCredential"
      ],
      "id": "https://xxx.xxxx.gov.in/pledgecredentials/{{osid}}",
      "issuer": "did:india:agri",
      "issuanceDate": "{{formatTime osUpdatedAt}}",
      "credentialSubject": {
        "type": "Person",
        "id": "did:farmer:{{farmerId}}",
        "name": "{{firstName}} {{lastName}}",
        "address": {
          "addressLine1": "{{addressLine1}}",
          "addressLine2": "{{addressLine2}}",
          "district": "{{district}}",
          "village": "{{village}}",
          "pincode": "{{pincode}}"
        }
      },
      "nonTransferable": "true"
    },
    "inviteRoles": [
      "anonymous"
    ],
    "roles": [
      "anonymous"
    ],
    "certificateTemplates": {
      "html": "https://raw.githubusercontent.com/Sunbird-RC/demo-donor-registry/main/pledgecertificates/portrait_templates_v3/Assamese_portrait_"
    }
  }
}